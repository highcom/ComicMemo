<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rakuten_book_navigation"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.highcom.comicmemo.ui.search.BookListFragment"
        android:label="fragment_book_list"
        tools:layout="@layout/fragment_book_list" >
        <action
            android:id="@+id/action_bookListFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
        <action
            android:id="@+id/action_bookListFragment_to_authorEditFragment"
            app:destination="@id/authorEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.highcom.comicmemo.ui.search.BookDetailFragment"
        android:label="fragment_book_detail"
        tools:layout="@layout/fragment_book_detail" >
        <action
            android:id="@+id/action_bookDetailFragment_to_inputMemoFragment"
            app:destination="@id/inputMemoFragment" >
            <argument
                android:name="isEdit"
                app:argType="boolean" />
            <argument
                android:name="status"
                app:argType="long" />
            <argument
                android:name="comic"
                app:argType="com.highcom.comicmemo.datamodel.Comic" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/inputMemoFragment"
        android:name="com.highcom.comicmemo.ui.edit.InputMemoFragment"
        android:label="fragment_input_memo"
        tools:layout="@layout/fragment_input_memo" >
        <argument
            android:name="isEdit"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="status"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="comic"
            app:argType="com.highcom.comicmemo.datamodel.Comic" />
    </fragment>
    <fragment
        android:id="@+id/authorEditFragment"
        android:name="com.highcom.comicmemo.ui.search.AuthorEditFragment"
        android:label="AuthorEditFragment"
        tools:layout="@layout/fragment_author_edit" />
</navigation>